<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/roomNameTextView" android:layout_weight="1"
            android:textAlignment="textStart" android:textSize="24sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/playersStateTextView" android:layout_weight="1"
            android:textAlignment="textEnd"/>
</LinearLayout>
